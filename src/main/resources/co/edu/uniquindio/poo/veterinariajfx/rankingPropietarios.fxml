<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20" style="-fx-background-color: #f4f4f4;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.poo.veterinariajfx.viewController.RankingPropietariosViewController">

    <padding>
        <Insets bottom="30" left="30" right="30" top="30" />
    </padding>

    <!-- Título -->
    <Label style="-fx-font-weight: bold; -fx-font-size: 24px; -fx-text-fill: #2c3e50;" text="Ranking de Propietarios" />
    <Label style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;" text="Los propietarios más frecuentes de la clínica" />

    <!-- Tabla de ranking -->
    <VBox style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10;">
        <TableView fx:id="tblRanking" prefHeight="400" prefWidth="717.0">
            <columns>
                <TableColumn fx:id="colPosicion" prefWidth="80" style="-fx-alignment: CENTER;" text="Posición" />
                <TableColumn fx:id="colNombre" prefWidth="250" text="Nombre Completo" />
                <TableColumn fx:id="colId" prefWidth="100" text="ID" />
                <TableColumn fx:id="colVisitas" prefWidth="100" style="-fx-alignment: CENTER;" text="Visitas" />
                <TableColumn fx:id="colDireccion" prefWidth="170" text="Dirección" />
            </columns>
            <placeholder>
                <Label style="-fx-text-fill: #95a5a6;" text="No hay propietarios registrados" />
            </placeholder>
        </TableView>
    </VBox>

    <!-- Botones -->
    <HBox alignment="CENTER" spacing="15">
        <Button fx:id="btnActualizar" onAction="#onActualizar" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 13px; -fx-padding: 10 25; -fx-background-radius: 5;" text="Actualizar Ranking" />

        <Button fx:id="btnRegresarMenu" onAction="#onRegresarMenu" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-size: 13px; -fx-padding: 10 25; -fx-background-radius: 5;" text="Regresar al Menú" />
    </HBox>

    <!-- Información adicional -->
    <VBox alignment="CENTER" spacing="5" style="-fx-background-color: #ecf0f1; -fx-padding: 15; -fx-background-radius: 5;">
        <Label fx:id="lblTotalPropietarios" style="-fx-font-size: 13px; -fx-font-weight: bold;" text="Total de propietarios: 0" />
        <Label fx:id="lblTotalVisitas" style="-fx-font-size: 13px; -fx-text-fill: #7f8c8d;" text="Total de visitas: 0" />
    </VBox>

</VBox>
