<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="co.edu.uniquindio.poo.veterinariajfx.controller.SugerenciaVacunacionController"
      spacing="15.0"
      alignment="TOP_CENTER">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="Sugerencia de Vacunación" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Seleccione la Especie:" />
        <ComboBox fx:id="comboEspecie" prefWidth="150.0" />
    </HBox>

    <Button text="Consultar Próxima Vacunación"
            onAction="#consultarVacunacion"
            maxWidth="Infinity" />

    <VBox fx:id="vboxResultado"
          spacing="5.0"
          alignment="CENTER_LEFT"
          visible="true"> <Label text="Resultado de la Sugerencia:" style="-fx-font-weight: bold;" />

        <Label fx:id="lblResultado"
               wrapText="true"
               style="-fx-font-style: italic; -fx-text-fill: #333333;" />
    </VBox>

    <Button text="Cerrar"
            onAction="#cerrarVentana"
            maxWidth="100.0" />
</VBox>