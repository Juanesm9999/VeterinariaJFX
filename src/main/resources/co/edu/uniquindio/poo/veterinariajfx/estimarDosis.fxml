<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="co.edu.uniquindio.poo.veterinariajfx.viewController.EstimarDosisViewController"
      spacing="15.0"
      alignment="TOP_CENTER"
      prefWidth="400.0">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="EstimaciÃ³n de Dosis" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Peso (kg):" prefWidth="150.0" />
        <TextField fx:id="txtPeso" promptText="Ingrese el peso" />
    </HBox>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Miligramos por Kilo:" prefWidth="150.0" />
        <TextField fx:id="txtMiligramosPorKilo" promptText="Ingrese mg/kg" />
    </HBox>

    <Button text="Calcular Dosis"
            fx:id="btnCalcular"
            onAction="#onCalcularDosis"
            maxWidth="Infinity"
            style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />

    <VBox fx:id="vboxResultado"
          spacing="10.0"
          alignment="CENTER_LEFT"
          visible="false"
          style="-fx-background-color: #f0f0f0; -fx-padding: 10; -fx-background-radius: 5;">

        <Label text="Resultado:" style="-fx-font-weight: bold; -fx-font-size: 14px;" />

        <Label fx:id="lblResultado"
               wrapText="true"
               style="-fx-font-size: 16px; -fx-text-fill: #2196F3;" />
    </VBox>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Limpiar"
                fx:id="btnLimpiar"
                onAction="#onLimpiar"
                prefWidth="100.0" />

        <Button text="Cerrar"
                fx:id="btnCerrar"
                onAction="#onCerrar"
                prefWidth="100.0" />
    </HBox>
</VBox>
